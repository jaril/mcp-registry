# MCP Registry Configuration
# Copy this file to .env and customize for your environment

# Server Configuration
MCP_PORT=8080
MCP_HOST=localhost
MCP_ENVIRONMENT=dev

# Logging
MCP_LOG_LEVEL=info

# Storage
MCP_STORAGE_TYPE=memory
MCP_DATA_PATH=./data

# Features
MCP_ENABLE_CORS=true
MCP_ENABLE_METRICS=false

# Application
MCP_VERSION=dev