# MCP Registry Configuration

# Server Configuration
MCP_PORT=8080
MCP_HOST=localhost
MCP_ENVIRONMENT=dev

# Logging
MCP_LOG_LEVEL=info

# Storage Configuration
MCP_STORAGE_TYPE=sqlite
MCP_DATA_PATH=./data

# Database Configuration (for SQLite)
MCP_DATABASE_URL=./data/registry.db
MCP_DATABASE_DRIVER=sqlite3
MCP_DATABASE_NAME=mcp_registry

# Database Connection Pool
MCP_MAX_OPEN_CONNS=25
MCP_MAX_IDLE_CONNS=25
MCP_CONN_MAX_LIFETIME=5

# Features
MCP_ENABLE_CORS=true
MCP_ENABLE_METRICS=false

# Application
MCP_VERSION=dev